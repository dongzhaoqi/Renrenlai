<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_8"
    android:layout_marginRight="@dimen/margin_8"
    android:layout_marginTop="@dimen/margin_8"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardElevation="1dp">

    <RelativeLayout
        android:id="@+id/rl_project"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/margin_8">

        <ImageView
            android:id="@+id/iv_project"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_150"/>

        <TextView
            style="@style/project_name"
            android:id="@+id/tv_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_project"
            android:layout_margin="@dimen/margin_8"
            android:text="与木为伴 让时光凝固-零基础木刻版画"
            android:textSize="@dimen/text_size_18" />

        <LinearLayout
            android:id="@+id/ll_comment1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_project_name"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_marginRight="@dimen/width_70"
            android:orientation="horizontal">

            <TextView
                style="@style/project_comment"
                android:id="@+id/tv_username1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_8"/>

            <TextView
                style="@style/project_comment"
                android:id="@+id/tv_comment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_comment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_comment1"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_marginRight="@dimen/width_70"
            android:orientation="horizontal">

            <TextView
                style="@style/project_comment"
                android:id="@+id/tv_username2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_8"
                android:layout_marginRight="@dimen/margin_8"/>

            <TextView
                style="@style/project_comment"
                android:id="@+id/tv_comment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_comments_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_project_name"
            android:layout_marginRight="@dimen/margin_8"
            android:layout_marginBottom="@dimen/margin_8"
            android:drawableLeft="@drawable/comment"
            android:gravity="center_vertical"
            android:text="10" />

        <TextView
            android:id="@+id/tv_like_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/tv_comments_number"
            android:layout_marginRight="@dimen/margin_8"
            android:drawableLeft="@drawable/heart"
            android:gravity="center_vertical"
            android:text="10" />

    </RelativeLayout>
</android.support.v7.widget.CardView>