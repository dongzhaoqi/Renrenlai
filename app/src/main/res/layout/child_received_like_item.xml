<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_received_like"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/margin_8">

    <ImageView
        android:id="@+id/iv_user_icon"
        android:layout_width="@dimen/padding_30"
        android:layout_height="@dimen/padding_30"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_8"
        android:src="@drawable/heart_pressed" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="活动通知"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14" />

        <TextView
            android:id="@+id/tv_received_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_8"
            android:text="活动通知"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/height_150"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_activity_img"
            android:layout_width="@dimen/height_50"
            android:layout_height="@dimen/height_50"
            android:src="@drawable/diploma" />

        <TextView
            android:id="@+id/tv_activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8"
            android:text="环小区挑战赛"
            android:textSize="@dimen/text_size_12" />

    </LinearLayout>
</LinearLayout>