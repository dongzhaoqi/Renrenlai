<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />

    <RelativeLayout
        android:id="@+id/layout_name"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:background="@drawable/row_selector">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/img_photo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/launch"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFFFF"/>

        <TextView
            style="@style/me_text_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/img_photo"
            android:text="仁人来" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@color/background" />

    <RelativeLayout
        android:id="@+id/layout_nickname"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/row_selector"
        android:paddingLeft="10dp"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/img_nickname"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_me" />

        <TextView
            style="@style/me_text_style"
            android:id="@+id/tv_name"
            android:layout_width="@dimen/height_96"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img_nickname"
            android:text="@string/txt_nick_name" />

        <TextView
            style="@style/more_text_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_name"
            android:text="张三"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:duplicateParentState="true"
            android:src="@drawable/go" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@color/background" />

    <RelativeLayout
        android:id="@+id/layout_community"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/row_selector"
        android:paddingLeft="10dp"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/img_my_community"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_me" />

        <TextView
            android:id="@+id/tv_my_community"
            style="@style/me_text_style"
            android:layout_width="@dimen/height_96"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img_my_community"
            android:text="@string/txt_my_community" />

        <TextView
            style="@style/more_text_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_my_community"
            android:text="金桥小区"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:duplicateParentState="true"
            android:src="@drawable/go" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@color/background" />


    <RelativeLayout
        android:id="@+id/layout_gender"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/row_selector"
        android:paddingLeft="10dp"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/img_gender"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_me" />

        <TextView
            style="@style/me_text_style"
            android:id="@+id/str_gender"
            android:layout_width="@dimen/height_96"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img_gender"
            android:text="@string/txt_gender" />

        <TextView
            android:id="@+id/tv_gender"
            style="@style/more_text_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/str_gender"
            android:text="男"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:duplicateParentState="true"
            android:src="@drawable/go" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@color/background" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@color/background" />


    <RelativeLayout
        android:id="@+id/layout_hobby"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/row_selector"
        android:paddingLeft="10dp"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/img_hobby"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_me" />

        <TextView
            style="@style/me_text_style"
            android:id="@+id/str_hobby"
            android:layout_width="@dimen/height_96"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img_hobby"
            android:text="@string/txt_hobby" />

        <TextView
            android:id="@+id/tv_hobby"
            style="@style/more_text_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/str_hobby"
            android:text="跑步 健身"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:duplicateParentState="true"
            android:src="@drawable/go" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@color/background" />

    <RelativeLayout
        android:id="@+id/layout_introduction"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/row_selector"
        android:paddingLeft="10dp"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/img_introduction"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_me" />

        <TextView
            style="@style/me_text_style"
            android:id="@+id/tv_introduction"
            android:layout_width="@dimen/height_96"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img_introduction"
            android:text="@string/txt_introduction" />

        <TextView
            style="@style/more_text_style"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/tv_introduction"
            android:text="金桥社区男神"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:duplicateParentState="true"
            android:src="@drawable/go" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@color/background" />

    <RelativeLayout
        android:id="@+id/layout_password"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/row_selector"
        android:paddingLeft="10dp"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/img_password"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_me" />

        <TextView
            style="@style/me_text_style"
            android:layout_width="@dimen/height_96"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/img_password"
            android:text="@string/txt_password" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:duplicateParentState="true"
            android:src="@drawable/go" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@color/background" />


</LinearLayout>