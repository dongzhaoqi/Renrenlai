<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/margin_8">

    <ImageView
        android:id="@+id/iv_review_icon"
        android:layout_width="@dimen/height_36"
        android:layout_height="@dimen/height_36"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_gravity="center_vertical"
        android:src="@drawable/arduino" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_marginRight="@dimen/margin_8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_12"
            android:text="活动通知" />

        <TextView
            android:id="@+id/tv_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_8"
            android:textSize="@dimen/text_size_12"
            android:text="活动通知" />

        <TextView
            android:id="@+id/tv_review_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/margin_8"
            android:textSize="@dimen/text_size_12"
            android:text="活动通知" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/height_150"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_activity_img"
            android:layout_width="@dimen/height_50"
            android:layout_height="@dimen/height_50"
            android:src="@drawable/diploma" />

        <TextView
            android:id="@+id/tv_activity_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8"
            android:textSize="@dimen/text_size_12"
            android:text="环小区挑战赛" />
    </LinearLayout>
</LinearLayout>