<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_like"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/height_56"
        android:background="@drawable/row_selector"
        android:paddingLeft="@dimen/padding_10"
        android:paddingRight="@dimen/padding_10">

        <ImageView
            android:id="@+id/iv_received_like"
            android:layout_width="@dimen/height_36"
            android:layout_height="@dimen/height_36"
            android:layout_centerVertical="true"
            android:background="@drawable/like"/>
        <TextView
            android:id="@+id/str_like"
            style="@style/me_text_style"
            android:layout_width="@dimen/height_96"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/iv_received_like"
            android:text="@string/str_like" />

        <ImageView
            android:id="@+id/iv_expand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:duplicateParentState="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:background="@color/background" />
</LinearLayout>