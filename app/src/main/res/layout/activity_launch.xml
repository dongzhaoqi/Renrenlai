<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SampleActivity$PlaceholderFragment">

    <include
        android:id="@+id/common_actionbar"
        layout="@layout/include_action_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_150"
                android:background="@drawable/layout_bottom_border">

                <com.siti.renrenlai.view.TextViewVertical
                    android:id="@+id/txt_category"
                    android:layout_width="56dp"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="@string/txt_category"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="150dp"
                    android:layout_toRightOf="@id/txt_category"
                    android:background="@color/divider" />

                <RelativeLayout
                    android:id="@+id/txt_interest"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_toRightOf="@id/txt_category"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center">

                    <TextView
                        style="@style/activity_text_style"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/icon_interest"
                        android:text="@string/txt_interest" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/txt_interest"
                    android:layout_toRightOf="@id/txt_category"
                    android:background="@color/divider" />

                <RelativeLayout
                    android:id="@+id/txt_help"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/txt_interest"
                    android:layout_toRightOf="@id/txt_category"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center">

                    <TextView
                        style="@style/activity_text_style"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/icon_help"
                        android:text="@string/txt_help" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/txt_help"
                    android:layout_toRightOf="@id/txt_category"
                    android:background="@color/divider" />

                <RelativeLayout
                    android:id="@+id/txt_advice"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/txt_help"
                    android:layout_toRightOf="@id/txt_category"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center">

                    <TextView
                        style="@style/activity_text_style"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/icon_advice"
                        android:text="@string/txt_advice" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/layout_bottom_border"
                android:paddingBottom="@dimen/margin_8"
                android:paddingLeft="@dimen/margin_8"
                android:paddingTop="@dimen/margin_8">

                <TextView
                    android:id="@+id/str_subject"
                    style="@style/activity_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/txt_theme" />

                <EditText
                    style="@style/me_text_style"
                    android:id="@+id/et_subject"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/str_subject"
                    android:background="@null"
                    android:nextFocusDown="@+id/et_time"
                    android:paddingLeft="@dimen/margin_8"
                    android:singleLine="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/layout_bottom_border"
                android:paddingBottom="@dimen/margin_8"
                android:paddingLeft="@dimen/margin_8"
                android:paddingTop="@dimen/margin_8">

                <TextView
                    android:id="@+id/str_time"
                    style="@style/activity_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/txt_time" />

                <TextView
                    style="@style/me_text_style"
                    android:id="@+id/et_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/str_time"
                    android:background="@null"
                    android:nextFocusDown="@+id/tv_end"
                    android:paddingLeft="@dimen/margin_8"
                    android:singleLine="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/layout_bottom_border"
                android:paddingBottom="@dimen/margin_8"
                android:paddingLeft="@dimen/margin_8"
                android:paddingTop="@dimen/margin_8">

                <TextView
                    android:id="@+id/str_end"
                    style="@style/activity_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/txt_end" />

                <TextView
                    style="@style/me_text_style"
                    android:id="@+id/tv_end"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/str_end"
                    android:background="@null"
                    android:nextFocusDown="@+id/et_place"
                    android:paddingLeft="@dimen/margin_8"
                    android:singleLine="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/layout_bottom_border"
                android:paddingBottom="@dimen/margin_8"
                android:paddingLeft="@dimen/margin_8"
                android:paddingTop="@dimen/margin_8">

                <TextView
                    android:id="@+id/str_place"
                    style="@style/activity_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/txt_place" />

                <EditText
                    style="@style/me_text_style"
                    android:id="@+id/et_place"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/str_place"
                    android:background="@null"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/margin_8" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/layout_bottom_border"
                android:paddingBottom="@dimen/margin_8"
                android:paddingLeft="@dimen/margin_8"
                android:paddingTop="@dimen/margin_8">

                <TextView
                    android:id="@+id/str_people"
                    style="@style/activity_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/txt_people" />

                <EditText
                    style="@style/me_text_style"
                    android:id="@+id/et_epople"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/str_people"
                    android:background="@null"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/margin_8" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_cover"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/layout_bottom_border"
                android:paddingBottom="@dimen/margin_8"
                android:paddingLeft="@dimen/margin_8"
                android:paddingTop="@dimen/margin_8">

                <TextView
                    android:id="@+id/str_cover"
                    style="@style/activity_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/txt_cover" />

                <TextView
                    android:id="@+id/tv_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/str_cover"
                    android:background="@null"
                    android:paddingLeft="@dimen/margin_8" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:duplicateParentState="true"
                    android:src="@drawable/go" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_bottom_border"
                android:paddingBottom="@dimen/margin_8"
                android:paddingLeft="@dimen/margin_8"
                android:paddingTop="@dimen/margin_8">

                <TextView
                    android:id="@+id/str_detail"
                    style="@style/activity_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/txt_detail" />

                <EditText
                    style="@style/me_text_style"
                    android:id="@+id/et_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/str_detail"
                    android:background="@null"
                    android:minLines="3"
                    android:gravity="top"
                    android:padding="@dimen/margin_8" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/layout_bottom_border"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_preview"
                    style="@style/activity_text_style"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_background"
                    android:text="@string/txt_preview" />

                <Button
                    android:id="@+id/btn_publish"
                    style="@style/activity_text_style"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_background"
                    android:text="@string/txt_publish" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>