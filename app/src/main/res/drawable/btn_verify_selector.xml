<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <solid  android:color="#F7B340"/>
            <padding android:left="@dimen/padding_10" android:right="@dimen/padding_10" android:top="@dimen/margin_8" android:bottom="@dimen/margin_8"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <solid  android:color="#F7B340"/>
            <padding android:left="@dimen/padding_10" android:right="@dimen/padding_10" android:top="@dimen/margin_8" android:bottom="@dimen/margin_8"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#F5A623" />
            <padding android:left="@dimen/padding_10" android:right="@dimen/padding_10" android:top="@dimen/margin_8" android:bottom="@dimen/margin_8"/>
            <solid android:color="#F5A623"/>
        </shape>
    </item>
</selector>