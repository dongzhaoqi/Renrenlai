<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/divider"/>
                </shape>
            </item>
            <item
                android:left="0dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="0dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/divider"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/divider"/>
                </shape>
            </item>
            <item
                android:left="0dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/divider"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/divider"/>
                </shape>
            </item>
            <item
                android:left="0dp"
                android:right="1dp"
                android:top="1dp"
                android:bottom="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
